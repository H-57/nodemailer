<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.title %></title>
    <style>
        body{
            background-color: #0e131f ;
            height: 100vh;
        }
    </style>
    <script>
if(!localStorage.getItem('name')||!localStorage.getItem('email')||!localStorage.getItem('password')&& document.cookies.email&& document.cookie.password&& document.cookie.name){
    localStorage.setItem('name',document.cookie.name);
    localStorage.setItem('email',document.cookie.email);
    localStorage.setItem('password',document.cookie.password);
}
if(localStorage.getItem('name')&& localStorage.getItem('email')&& localStorage.getItem('password')&& !document.cookies.email && !document.cookie.password&& !document.cookie.name){
    document.cookie=`name=${localStorage.getItem('name')}`;
    document.cookie=`email=${localStorage.getItem('email')}`;
    document.cookie=`password=${localStorage.getItem('password')}`;
}
    


    </script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.1.1/flowbite.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.1.1/flowbite.min.js"></script>

    <%- include('./toast.ejs') %>

</head>